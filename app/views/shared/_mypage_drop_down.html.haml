.header-mypage-box
  .header-mypage-box__state
    %figure.header-mypage-box__state__figure
      .header-mypage-box__state__figure__div
        - if current_user.persisted? && current_user.avatar?
          = image_tag current_user.avatar.to_s, class: 'avatar_present_img'
        - else
          = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png", alt: ""
      %figcaption
        = current_user&.nickname

    %ul.header-mypage-box__state__listing
      %li.header-mypage-box__state__listing__li
        = link_to user_lates_path(current_user) do
          評価: #{current_user&.late_count}
      %li.header-mypage-box__state__listing__li
        = link_to exhibition_users_path(current_user) do
          出品数: #{current_user&.items&.count}

    %ul.header-mypage-box__state__points
      %li.header-mypage-box__state__points__li
        = link_to '#', class: "clearfix" do
          .left 売上金
          .right
            = "¥#{thousands_separator(@total_price)}"
            = fa_icon 'angle-right',class: 'mypage-nav-icon'

      %li.header-mypage-box__state__points__li
        = link_to '#',class: "clearfix" do
          .left ポイント
          .right
            P 0
            = fa_icon 'angle-right',class: 'mypage-nav-icon'

  %ul.header-mypage-box__list
    %li
      = link_to user_likes_path(current_user),class: "link-item" do
        いいね！一覧

        = fa_icon 'angle-right',class: 'mypage-nav-icon'
    %li
      = link_to exhibition_users_path(current_user),class: "link-item" do
        出品した商品 - 出品中
        = fa_icon 'angle-right',class: 'mypage-nav-icon'
    %li
      = link_to seller_trading_users_path(current_user),class: "link-item" do
        出品した商品 - 取引中
        = fa_icon 'angle-right',class: 'mypage-nav-icon'
    %li
      = link_to sold_page_users_path(current_user),class: "link-item" do
        出品した商品 - 売却済み
        = fa_icon 'angle-right',class: 'mypage-nav-icon'
    %li
      = link_to trading_users_path(current_user),class: "link-item" do
        購入した商品 - 取引中
        = fa_icon 'angle-right',class: 'mypage-nav-icon'
    %li
      = link_to purchased_users_path(current_user),class: "link-item" do
        購入した商品 - 過去の取引
        = fa_icon 'angle-right',class: 'mypage-nav-icon'
