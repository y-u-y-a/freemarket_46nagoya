.item-boxes
  - items.each do |item|
    %section.item-box
      = link_to item_path(item), class: "item-box__link" do
        %figure.item-box__photo
          = image_tag item.item_images.first.image
        - if item.business_stats == 3
          .item-box__sold-out
            %div SOLD
        .item-box-intro
          %h3.item-box-intro__item-name
            = item.name
          .item-box-num
            .item-box-num__price
              = "¥ #{thousands_separator(item.price)}"
            - if item.likes_count
              .item-box-num__likes
                %i.fa.fa-heart
                %span
                  = item.likes_count
          %p.item-box-intro__tax
            (税込)
