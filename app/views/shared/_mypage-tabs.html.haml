- url = request.path_info
- if url.match('purchased')
  %li.two-tabs
    %h3
      = link_to '取引中',trading_users_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.two-tabs.active
    %h3
      = link_to '過去の取引',purchased_users_path(current_user),id: 'mypage-tab-transaction-old','data-toggle':'tab'

- if url.match('trading') && (not url.match('seller_trading'))
  %li.two-tabs.active
    %h3
      = link_to '取引中',trading_users_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.two-tabs
    %h3
      = link_to '過去の取引',purchased_users_path(current_user),id: 'mypage-tab-transaction-old','data-toggle':'tab'

- if url.match('sold_page')
  %li.three-tabs
    %h3
      = link_to '出品中',exhibition_users_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.three-tabs
    %h3
      = link_to '取引中',seller_trading_users_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.three-tabs.active
    %h3
      = link_to '売却済み',sold_page_users_path(current_user),id: 'mypage-tab-transaction-old','data-toggle':'tab'

- if url.match('exhibition')
  %li.three-tabs.active
    %h3
      = link_to '出品中',exhibition_users_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.three-tabs
    %h3
      = link_to '取引中',seller_trading_users_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.three-tabs
    %h3
      = link_to '売却済み',sold_page_users_path(current_user),id: 'mypage-tab-transaction-old','data-toggle':'tab'

- if url.match('seller_trading')
  %li.three-tabs
    %h3
      = link_to '出品中',exhibition_users_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.three-tabs.active
    %h3
      = link_to '取引中',seller_trading_users_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.three-tabs
    %h3
      = link_to '売却済み',sold_page_users_path(current_user),id: 'mypage-tab-transaction-old','data-toggle':'tab'

- if url.match('lates')
  %li.four-tabs.all
    %h3
      = link_to 'すべて',user_lates_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.four-tabs.good
    %i.fa.fa-grin.icon-good
    %h3
      = link_to '良い',great_user_lates_path(current_user),id: 'mypage-tab-transaction-now','data-toggle':'tab'
  %li.four-tabs.normal
    %i.fa.fa-meh.icon-normal
    %h3
      = link_to '普通',good_user_lates_path(current_user),id: 'mypage-tab-transaction-old','data-toggle':'tab'
  %li.four-tabs.bad
    %i.fa.fa-frown.icon-bad
    %h3
      = link_to '悪い',poor_user_lates_path(current_user),id: 'mypage-tab-transaction-old','data-toggle':'tab'
