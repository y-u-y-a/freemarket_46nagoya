.container

  - breadcrumb :item_show, @item
  = render 'shared/header'
  = render 'delete-overlay'

  %section.item-box-container.l-single-container
    %h1.item-box-container__item-name
      = @item.name
    .item-box-container__main-content.clearfix
      .item-box-container__main-content__photo
        .owl-carousel.owl-loaded.owl-drag
          .owl-stage-outer
            .owl-stage{ style: 'left:0px',width: '1200px'}
              .owl-item{ style: 'width:300px'}
                .owl-item__inner.is-higher-width
                  = image_tag @images.first.image

          - @images.each do |image|
            - if image.present?
              .owl-dots
                .owl-dot.active
                  %span
                  .owl-dot-inner
                    = image_tag image.image
          - if @item.business_stats == 3
            .item-sold-out-badge
              %div SOLD

      %table.item-box-container__main-content__item-detail-table
        %tbody
          %tr
            %th 出品者
            %td
              = link_to '#' do
                = @item.user.nickname
              %div
                .item-user-ratings
                  %i.fa.fa-facebook-square
                  %span 873
                .item-user-ratings
                  %i.fa.fa-twitter
                  %span 26
                .item-user-ratings
                  %i.fa.fa-apple
                  %span 3

          %tr
            %th カテゴリー
            %td
              = link_to '#' do
                %div 果物
              = link_to '#' do
                .item-detail-table-sub-category
                  = fa_icon 'angle-right'
                  フルーツ
              = link_to '#' do
                .item-detail-table-sub-sub-category
                  = fa_icon 'angle-right'
                  果物

          %tr
            %th ブランド
            %td
              = link_to '#' do
                %div コーチ

          %tr
            %th 商品の状態
            %td
              = @item.state

          %tr
            %th 配送料の負担
            %td
              = @item.postage

          %tr
            %th 配送の方法
            %td
              = @item.shipping_way

          %tr
            %th 配送元地域
            %td
              = link_to @region.name , '#'

          %tr
            %th 発送の目安
            %td
              = @item.shipping_date

    .item-price-box.text-center
      %span.item-price.bold
        = "¥ #{thousands_separator(@item.price)}"
      %span.item-tax          (税込)
      %span.item-shipping-fee 送料込み

    / 売れた後
    / .item-buy-btn.disabled
    /   売り切れました

    - if current_user.id != @item.user_id
      = link_to buy_item_path(@item) , class: 'item-btn-client item-buy-btn' do
        %div{"data-client":"visible"} 購入画面に進む

    .item-description
      %p.item-description__inner
        = @item.explain

    .item-button-container.clearfix
      .item-button-left
        %button{ type: 'button', name: 'like','data-toggle':'like',class: 'item-button item-button-like'}

          %i.fa.fa-heart
          %span いいね
          %span.fade-in-down 7

        = link_to '#',class: 'item-button item-button-report clearfix' do
          %i.fa.fa-flag
          %span 適切な商品の報告

      .item-button-right
        = link_to '#' do
          %i.fa.fa-unlock
          %span あんしん・あんぜんへの取り組み

  - if @item.user_id == current_user.id
    .listening-item-change-box
      = link_to '商品の編集',edit_item_path(@item),class: 'btn-default btn-red'
      %p.text-center or
      = form_for @item, method: 'POST' do |f|
        = f.submit "出品を一旦停止する",class: 'btn-default btn-gray', id: 'stop-item'
      = button_tag type: 'button', class: 'btn-default btn-gray',id: 'delete-item' do
        この商品を削除する

  .item-detail-message
    .message-container
      .message-content
        %ul.message-items
          = render 'user_comments'


      .message-content
        %form.message-form
          %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %input{ type: 'hidden',name: 'item_id',value: ''}
          %input{ type: 'hidden',name: 'redirect_url_key',value: '',class: 'item_detail'}
          %textarea{ type: 'text',name: 'body',class: 'textarea-default disabled'}
          %button{ type: 'submit', class: 'message-submit btn-default btn-gray'}
            %span 売り切れのためコメントできません

  %ul.nav-item-link-prev-next.clearfix
    %li.nav-item-link-prev
      = link_to '#' do
        = fa_icon 'angle-left'
        ディズニーヴィランズ 2個セット バッジ バッチ Villains 2018

    %li.nav-item-link-next
      = link_to '#' do
        バーにかかってきた電話/東 直己
        = fa_icon 'angle-right'

  .item-social-media-box
    .text-center
      %ul.social-media-box
        %li
          = link_to '#', class: 'share-btn','target':'_blank' do
            %i.fa.fa-facebook-square.icon-facebook
          = link_to '#', class: 'share-btn','target':'_blank' do
            %i.fa.fa-twitter.icon-twitter
          = link_to '#', class: 'share-btn','target':'_blank' do
            %i.fa.fa-google.icon-google

  .items-in-user-profile
    %section.items-box-container.items-box-overflow.items-in-user-profile.clearfix
      %h2.item-box-head
        = link_to @item.user.nickname, users_path
      .items-box-content.clearfix
        = render 'user_items'

    %section.items-box-container.items-box-overflow.items-in-user-profile.clearfix
      %h2.item-box-head
        = link_to 'コーチのショルダーバッグ その他の商品','#'
      .items-box-content.clearfix
        = render 'other_items'



  = render 'shared/footer'
