.single-container
  = render "users/signup_header"


  // 入力フォーム
  %main.single-main
    %section.l-single-container
      %h2.l-single-head 会員情報入力
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'l-single-inner'}) do |f|
        = render "devise/shared/error_messages", resource: resource
        %input{name: "__csrf_value", type: "hidden", value: ""}


        .l-single-content
          .form-group
            = f.label :ニックネーム
            %span.form-require 必須
            = f.text_field :nickname, placeholder: "例) メルカリ太郎", class: 'input-default'


          .form-group
            = f.label :メールアドレス
            %span.form-require 必須
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "input-default"
          %input{name: "login_type", type: "hidden", value: ""}


          .form-group
            = f.label :パスワード
            %span.form-require 必須
            = f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上", class: "input-default"


          .form-group
            = f.label :パスワード確認
            %span.form-require 必須
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上", class: "input-default"

          // ここまで完了
          .form-group
            %h3.text-left.l-chapter-sub-head 本人確認
            %p.l-single-text
              安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。


          .form-group
            %label{for: "family_name_kanji"} 姓 (全角)
            %span.form-require 必須
            %input.input-default{name: "family_name_kanji", placeholder: "例) 山田", type: "text", value: ""}
          .form-group
            %label{for: "first_name_kanji"} 名 (全角)
            %span.form-require 必須
            %input.input-default{name: "first_name_kanji", placeholder: "例) 彩", type: "text", value: ""}
          .form-group
            %label{for: "family_name_kanji"} 姓カナ (全角)
            %span.form-require 必須
            %input.input-default{name: "family_name_kana", placeholder: "例) ヤマダ", type: "text", value: ""}
          .form-group
            %label{for: "first_name_kana"} 名カナ (全角)
            %span.form-require 必須
            %input.input-default{name: "first_name_kana", placeholder: "例) アヤ", type: "text", value: ""}
