.single-container
  = render "users/signup_header"

  %main.single-main
    %section.l-single-container
      %h2.l-single-head 会員情報入力
      = form_for(@address, html: {class: 'l-single-inner'}) do |f|
        = render "devise/shared/error_messages", resource: @address

        .l-single-content
          .form-group
            = f.label :お名前
            %span.form-require 必須
            = f.text_field :nickname, placeholder: "例) 山田", class: 'input-default'
            = f.text_field :nickname, placeholder: "例) 彩", class: 'input-default'


          .form-group
            = f.label :お名前カナ
            %span.form-require 必須
            = f.text_field :nickname, placeholder: "例) ヤマダ", class: 'input-default'
            = f.text_field :nickname, placeholder: "例) アヤ", class: 'input-default'


          .form-group
            = f.label :郵便番号
            %span.form-require 必須
            = f.text_field :nickname, placeholder: "例) 123-4567", class: 'input-default'


          .form-group
            = f.label :都道府県
            %span.form-require 必須
            = f.text_field :nickname, placeholder: "北海道", class: 'input-default'


          .form-group
            = f.label :市町村
            %span.form-require 必須
            = f.text_field :nickname, placeholder: "例) 横浜市緑区", class: 'input-default'


          .form-group
            = f.label :番地
            %span.form-require 必須
            = f.text_field :nickname, placeholder: "例) 青山1-1-1", class: 'input-default'


          .form-group
            = f.label :建物名
            %span.form-require 任意
            = f.text_field :nickname, placeholder: "例) 柳ビル103", class: 'input-default'


          .form-group
            = f.label :電話
            %span.form-require 任意
            = f.text_field :nickname, placeholder: "例) 09012345678", class: 'input-default'

          %button.btn-default.btn-red{type: "submit"} 次へ進む

  = render "users/user_footer"
